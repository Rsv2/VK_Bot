<UserControl x:Class="Bot.MessageUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bot"
             mc:Ignorable="d"
             d:DesignWidth="360"
             d:DesignHeight="115" MaxWidth="440">
    <Grid>
        <TextBlock x:Name="LinkToFile" TextWrapping="Wrap" Text=""/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0" CornerRadius="10" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
        </Border>
        <TextBlock x:Name="Date" TextWrapping="Wrap" Text="10" Margin="10,10,225,90" FontSize="10" Foreground="#FF111AE0"/>
        <TextBlock x:Name="Message" Margin="10,45,10,10" TextWrapping="Wrap" Text="" FontSize="14"/>
        <TextBlock x:Name="Name" Margin="46,25,20,70" TextWrapping="Wrap" Text="" FontSize="14"/>
        <TextBlock x:Name="Address" HorizontalAlignment="Left" Margin="10,27,0,72" TextWrapping="Wrap" Text="Кому:" TextAlignment="Right"/>
    </Grid>
</UserControl>
